.notice__container {
  height: 94vh;
  overflow: scroll;
}

.notice__item {
  height: auto;
  background: white;
  margin: 40rpx;
}

.notice__top {
  display: flex;
  padding: 20rpx 0;
  margin: 0 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.notice__message,
.notice__text {
  color: #999999;
  font-size: 28rpx;
}

.notice__title {
  color: #666;
  font-size: 30rpx;
  padding: 10rpx 20rpx 0;
}

.notice__message {
  padding: 10rpx 20rpx;
}

.btn-add {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  background: #006DF0;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 0rpx 10rpx 30rpx #666;
  transition: .5s;
  transform: scale(1);
  opacity: 1;
}

.btn-add::after {
  content: "+";
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 3rem;
}

.btn-add:hover {
  opacity: .7;
  transform: scale(0.95);
}