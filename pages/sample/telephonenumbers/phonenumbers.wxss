.list-container {
  padding: 0
}

.list-item {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.left {
  width: 100rpx;
  height: 100rpx;
}

.right {
  width: 100%;
  height: 100rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.title {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 310rpx;
}

.title-name {
  display: flex;
  align-items: center;
}

.title-name>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.name {
  font-size: 40rpx;
  color: #000;
}

.company {
  width: 300rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  word-break: break-all;
  font-size: 30rpx;
  color: #999;
}

.phone {
  font-size: 35rpx;
  color: darkgrey;
}

.button {
  width: 200rpx;
  line-height: 60rpx;
  letter-spacing: 5rpx;
}

.time {
  width: 200rpx;
  color: #aaa;
  font-size: 30rpx;
}