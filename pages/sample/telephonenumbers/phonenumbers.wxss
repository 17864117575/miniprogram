.weui-search-container {
  margin: 30rpx;
}

.weui-search-bar__form {
  display: flex;
  position: relative;
  border-radius: 5px;
  background: #eee;
  border: 1rpx solid #e6e6ea;
  height: 80rpx;
  box-shadow: 0rpx 0rpx 10rpx #e6e6ea inset;
  width: 100%;
  align-items: center;
}

.weui-search-bar__text {
  width: 100%;
  margin: 10rpx;
}

.weui-search-bar__form>text {
  width: 80rpx;
  height: 80rpx;
  font-size: 50rpx;
  text-align: center;
  color: #999;
}

.list-container {
  padding: 0;
  height: 90vh;
  overflow: scroll;
}

.list-item {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.left {
  width: 100rpx;
  height: 100rpx;
}

.right {
  width: 100%;
  height: 100rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.title {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 310rpx;
}

.title-name {
  display: flex;
  align-items: center;
}

.title-name>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.name {
  font-size: 40rpx;
  color: #000;
}

.company {
  width: 300rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  word-break: break-all;
  font-size: 30rpx;
  color: #999;
}

.phone {
  font-size: 35rpx;
  color: darkgrey;
}

.button {
  width: 200rpx;
  line-height: 60rpx;
  letter-spacing: 5rpx;
}

.time {
  width: 200rpx;
  color: #aaa;
  font-size: 30rpx;
}