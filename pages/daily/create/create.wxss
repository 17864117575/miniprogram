@import "../../common/lib/weui.wxss";

textarea {
  padding: 20rpx;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.weui__content {
  height: 94vh;
}

.weui-cells__member-content {
  display: flex;
  flex-wrap: wrap;
}

.weui-cells__member,
.weui-cells__add {
  margin: 20rpx;
  font-size: 30rpx;
  color: #999;
  background: #eee;
  padding: 0 20rpx;
  border-radius: 5rpx;
}

.weui-cells__add {
  color: #006AE9;
  background: none;
}

.pictures__container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 0 20rpx;
}

.weui-cell__picture {
  height: 100rpx;
  width: 100rpx;
  background: #ffffff;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 10rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  font-size: 2rem;
}

.weui-cell__picture:hover {
  opacity: 0.7;
}

.submit{
  margin: 40rpx;
}