@import '../../common/lib/weui.wxss';

.container {
  justify-content: unset;
}

.client-info-container {
  margin: 20rpx;
  border-bottom: 2rpx solid #D9D9D9;
}

.client-info-bottom {
  margin: 40rpx;
}

.client-info-cells {
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.5rem;
  font-size: 17px;
}

.client-info-cell {
  padding: 10rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-label {
  font-size: 32rpx;
  color: #999;
  width: auto;
  margin-right: 20rpx;
}

.weui-cell__bd {
  font-size: 32rpx;
}

.title-telephone__line {
  text-decoration: underline;
  color: #006DF0;
}

.empty-tip {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}