@import '../../common/lib/weui.wxss';
@import '../../../resource/iconfont/stylesheet.wxss';

.container {
  justify-content: unset;
}

.client-info-container {
  margin: 20rpx;
  border-bottom: 2rpx solid #D9D9D9;
}

.client-info-bottom {
  margin: 40rpx;
}

.client-info-cell {
  padding: 10rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.client-task-cell {
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  border-top: 2rpx solid #ddd;
}

.client-info-cell__top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}

.client-info-cell__title {
  font-size: 40rpx;
}

.client-info-cell__type-tip {
  border-radius: 98rpx;
  background: #eee;
  padding: 0 30rpx;
  color: #666;
  font-size: 30rpx;
}

.client-info-cell__delete {
  color: #006DF0;
  padding: 0 50rpx;
  font-size: 1.5rem;
  text-align: right;
  opacity: 1;
}

.client-info-cell__delete :hover {
  opacity: .7;
}

.weui-label {
  font-size: 32rpx;
  color: #999;
  width: auto;
  margin-right: 20rpx;
}

.weui-cell__bd {
  font-size: 32rpx;
}

.title-telephone__line {
  text-decoration: underline;
  color: #006DF0;
}

.empty-tip {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.btn-add {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  background: #006DF0;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 0rpx 10rpx 30rpx #666;
  transition: .5s;
  transform: scale(1);
  opacity: 1;
}

.btn-add::after {
  content: "+";
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 3rem;
}

.btn-add:hover {
  opacity: .7;
  transform: scale(0.95);
}

.client-info-pie {
  font-size: 2.5rem;
  line-height: 120rpx;
  height: 120rpx;
  margin: 0 50rpx;
  color: #666;
}

.client-info-top {
  display: flex;
  background: white;
  border: 2rpx solid #ddd;
}

.client-info__order-title {
  font-size: 1.2rem;
  margin-top: 10rpx;
}

.client-info__order-text {
  font-size: 28rpx;
  color: #999;
}

.order-container-cell {
  border: 2rpx solid #ddd;
  margin: 20rpx 0;
  position: relative;
  background: white;
}

.order-state {
  right: 20rpx;
  top: 20rpx;
  font-size: 28rpx;
}

.order-title-container__top {
  display: flex;
  margin: 20rpx 30rpx 0;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
}

.order-title-container {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 400rpx;
}

.btn__more {
  text-align: center;
  background: #eee;
  height: 60rpx;
  font-size: 2rem;
  line-height: 30rpx;
  color: #006DF0;
  opacity: 1;
}

.btn__more:hover {
  opacity: .7;
}