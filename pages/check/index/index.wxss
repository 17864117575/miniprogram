.check__container {
  background-color: #fff;
}

.check__item {
  margin: 20rpx;
  border: 2rpx solid #eee;
}

.check__status {
  border-radius: 10rpx;
  padding: 0 10rpx;
  color: #fff;
  font-size: 28rpx;
}

.check__top {
  margin: 20rpx;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}

.check__content {
  margin: 0 20rpx;
}

.check__title {
  color: #006DF0;
  font-size: 30rpx;
}

.check__name {
  font-size: 30rpx;
}

.check__text {
  color: #999;
  font-size: 28rpx;
}

.btn-more {
  text-align: center;
  font-size: 2rem;
  color: #006DF0;
  height: 60rpx;
  background: #eee;
  line-height: 30rpx;
}

.btn-more:hover {
  opacity: .7;
}

.btn-add {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  background: #006DF0;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 0rpx 10rpx 30rpx #666;
  transition: .5s;
  transform: scale(1);
  opacity: 1;
}

.btn-add::after {
  content: "+";
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 3rem;
}

.btn-add:hover {
  opacity: .7;
  transform: scale(0.95);
}