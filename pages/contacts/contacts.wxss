.client-info-container {
  margin: 20rpx;
  border-bottom: 2rpx solid #D9D9D9;
}

.empty-tip {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.btn-add {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  background: #006DF0;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 0rpx 10rpx 30rpx #666;
  transition: .5s;
  transform: scale(1);
  opacity: 1;
}

.btn-add::after {
  content: "+";
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
color: #fff;
  font-size: 3rem;
}

.btn-add:hover {
  opacity: .7;
  transform: scale(0.95);
}