.container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 99;
}

.product__show {
  display: block;
}

.product__hidden {
  display: none;
}

.product__mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.product__container {
  width: 700rpx;
  max-height: 80vh;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 10rpx;
  z-index: 100;
}

.product__title {
  position: relative;
  text-align: center;
  margin: 30rpx 30rpx 20rpx 30rpx;
  padding-bottom: 10rpx;
}

.product__title-box {
  position: relative;
  display: flex;
  margin: 10rpx 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.product__title-box>view {
  min-width: 20%;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.product__list-container {
  min-height: 200rpx;
  text-align: center;
  max-height: 70vh;
  overflow: scroll;
}

button {
  margin: 40rpx 100rpx 20rpx;
}