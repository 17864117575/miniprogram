.person-container {
  border: 2rpx solid #ddd;
  margin-bottom: 20rpx;
  position: relative;
  background: white;
}

.person__top-container {
  display: flex;
  height: 100rpx;
  align-items: center;
  margin: 0 40rpx;
}

.person__top-title {
  font-size: 1.5rem;
  margin-right: 30rpx;
}

.person__top-tip {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 26rpx;
  color: #888;
}

.person__top-img {
  width: 40rpx;
  height: 40rpx;
}


.person-item__cell {
  display: flex;
  height: 80rpx;
  align-items: center;
  margin: 0 40rpx;
  border-bottom: 2rpx solid #ddd
}

.person-item__title,
.person-item__text {
  font-size: 30rpx;
}

.person-item__title {
  color: #999;
}

.person__more {
  text-align: center;
  background: #eee;
  height: 60rpx;
  font-size: 2rem;
  line-height: 30rpx;
  color: #006DF0;
  opacity: 1;
}

.person__more:hover {
  opacity: .7;
}