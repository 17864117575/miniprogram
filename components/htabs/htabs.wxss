.tabs {
  line-height: 2.5rem;
  display: flex;
  justify-content: space-around;
  background: #fff;
  width: 100vw;
  border-bottom: 2rpx solid #eee;
}

.title-item {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.tabs-title {
  line-height: 2.5rem;
}

.active {
  position: relative;
  color: #006DF0;
}

.active::after {
  content: '';
  position: absolute;
  width: 30%;
  height: 60%;
  border-bottom: 4rpx solid #006DF0;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
}